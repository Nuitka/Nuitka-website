{
  "name": "nuitka-website",
  "version": "1.0.0",
  "description": "Helper for managing website",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "postcss $INPUT --output $OUTPUT --config postcss.config.js",
    "build:html": "sh -c 'html-minifier-next --collapse-whitespace --remove-optional-tags --remove-redundant-attributes \"$INPUT\" -o \"$INPUT.min.html\" && mv \"$INPUT.min.html\" \"$INPUT\"'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nuitka/Nuitka-website"
  },
  "author": "",
  "license": "ASF2.0",
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "html-minifier-next": "^1.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}
