// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
 	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	"features": {
		"ghcr.io/devcontainers-contrib/features/apt-packages:1": {
			"packages": "python3-dev,python3-pip,bash-completion,optipng,jpegoptim,file"
		},
		"ghcr.io/devcontainers-contrib/features/bash-command:1": {
			"command": "python3 -m pip install invoke pipenv"
		},
		"ghcr.io/hwaien/devcontainer-features/match-host-time-zone": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo dpkg-reconfigure tzdata -f none",

	"postStartCommand": "./auto-update.sh",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"samuelcolvin.jinjahtml",
				"jebbs.plantuml",
				"lextudio.restructuredtext",
				"aeschli.vscode-css-formatter",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"GitHub.vscode-pull-request-github",
				"trond-snekvik.simple-rst",
				"shuworks.vscode-table-formatter",
				"streetsidesoftware.code-spell-checker",
				"redhat.vscode-xml",
				"eamodio.gitlens"
			]
		}
	},
	"containerEnv": {
		"PIPENV_VERBOSITY": "-1"
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
