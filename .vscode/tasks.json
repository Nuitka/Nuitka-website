{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "panel": "shared",
    },
    "tasks": [
        {
            "label": "rebuild all pages",
            "type": "shell",
            "command": "killall -SIGUSR2 sphinx-autobuild",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "auto-format current file",
            "type": "shell",
            "command": "./auto-format ${file}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "auto-format documents and code",
            "type": "shell",
            "command": "./auto-format *.py site/*.rst site/*/*.rst site/*.inc site/*/*.inc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "auto-format JPEG images",
            "type": "shell",
            "command": "./auto-format images/*.jpg site/posts/images/*.jpg",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "auto-format PNG images",
            "type": "shell",
            "command": "./auto-format images/*.png doc/posts/images/*.png",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
    ],
    "typescript.tsc.autoDetect": "off",
    "grunt.autoDetect": "off",
    "jake.autoDetect": "off",
    "gulp.autoDetect": "off",
    "npm.autoDetect": "off"
}
